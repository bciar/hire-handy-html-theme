mixin progress__container(number, color, max, size)
							
	if max
		//- if maximum is defined
		-var max = max
	else
		//- default bar maximum mark is 10
		-var max = 10



	-var percent = (number/max)*100

	.progress__container
		
		//- if size class is defined
		if size
			.progress(class="progress--" + size)
				.progress-bar(class="bg-" + color, style="width: " + percent + "%")
		else
			.progress
				.progress-bar(class="bg-" + color, style="width: " + percent + "%")

		b.progress__text= number


mixin progress__item(text, number, color, text2, headingIsBold, max, size)

	.progress__item

		if headingIsBold
			h5= text
		else
			h5.fw500= text

		if text2
			p= text2

		+progress__container(number, color, max, size)


mixin progress-lg(number, color, minText, maxText)

	-var percent = (number/5)*100
	
	.progress-lg__container
		
		.progress.progress-lg
			
			// bar
			.progress-bar(class="bg-" + color, style="width: " + percent + "%")

				// min
				b.progress__min 0
					span.progress__min-max-text
						img.mb-1(src="img/tpl/triangle-up.png", alt="", width="6")
						br
						= minText
				// number
				b.progress__number= number
			
			// max
			b.progress__max 5
				span.progress__min-max-text
					img.mb-1(src="img/tpl/triangle-up.png", alt="", width="6")
					br
					= maxText



