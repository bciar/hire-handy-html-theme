mixin profile-statistic(color, link, icon, number, active)

	//.profile-statistic
	a.profile-statistic.js-profile-link(class="profile-statistic--" + color + " " + active, href= link, data-target="#motivators")

		span.profile-statistic__icon-container
			img.profile-statistic__icon.profile-statistic__icon--normal(src="img/tpl/profile/motivators/" + icon + "-blue.png", alt="")
			img.profile-statistic__icon.profile-statistic__icon--active(src="img/tpl/profile/motivators/" + icon + ".png", alt="")
		
		span.profile-statistic__rating.text-muted= number

	///.profile-statistic




